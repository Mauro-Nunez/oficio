{% extends 'base.html.twig' %}

{% block title %}Formulario de Registro{% endblock %}

{% block body %}
<div class="min-vh-100 d-flex justify-content-center align-items-center bg-light">
    <div class="card shadow-lg w-100" style="max-width: 500px;">
<div class="container text-center my-5">
        <img src="{{ asset('images/logo.png') }}" alt="Logo" class="img-fluid" style="max-width: 200px;">
    </div>
        <div class="card-body p-4">
            <h2 class="text-center mb-4">Formulario de Registro</h2>

            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

            <div class="mb-3">
                {{ form_label(form.name, 'Nombre', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su nombre'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.email, 'Correo Electrónico', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Ingrese su correo'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.email) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_label(form.date, 'Fecha de Nacimiento', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.date) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.description, 'Descripción', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Descripción'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.description) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.phone, 'Teléfono', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Teléfono'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.phone) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.dni, 'DNI', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dni, {'attr': {'class': 'form-control', 'placeholder': 'DNI'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.dni) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.address, 'Dirección', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.address, {'attr': {'class': 'form-control', 'placeholder': 'Dirección'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.address) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.workAddress, 'Dirección de Trabajo (opcional)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.workAddress, {'attr': {'class': 'form-control', 'placeholder': 'Dirección de Trabajo'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.workAddress) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.payment, 'Tipo de pago', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.payment, {'attr': {'class': 'form-control', 'placeholder': 'Tipo de pago'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.payment) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.time, 'Horario de trabajo', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.time, {'attr': {'class': 'form-control', 'placeholder': 'Horario de trabajo'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.time) }}
                </div>
            </div>
    <div class="mb-3 d-flex align-items-center">
    {{ form_label(form.certification, 'Certificación', {'label_attr': {'class': 'form-label me-2'}}) }}

    <div class="form-check form-check-inline me-3">
        {{ form_widget(form.certification.0, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.certification.0, 'Sí', {'label_attr': {'class': 'form-check-label'}}) }}
    </div>

    <div class="form-check form-check-inline">
        {{ form_widget(form.certification.1, {'attr': {'class': 'form-check-input'}}) }}
        {{ form_label(form.certification.1, 'No', {'label_attr': {'class': 'form-check-label'}}) }}
    </div>

    <div class="invalid-feedback">
        {{ form_errors(form.certification) }}
    </div>
</div>
            <div class="mb-3">
                {{ form_label(form.institution, 'Institución', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.institution, {'attr': {'class': 'form-control', 'placeholder': 'Institución certificante'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.institution) }}
                </div>
            </div>
            <div class="mb-3">
                {{ form_label(form.recomendation, 'Recomendación', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.recomendation, {'attr': {'class': 'form-control', 'placeholder': 'Posee alguna recomendación'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.recomendation) }}
                </div>
            </div>
              <div class="mb-3">
                {{ form_label(form.images, 'Imagenes', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.images, {'attr': {'class': 'form-control', 'placeholder': 'Imagenes'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.images) }}
                </div>
            </div>
            
              <div class="mb-3">
                {{ form_label(form.oficio, 'Oficio', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.oficio, {'attr': {'class': 'form-control', 'placeholder': 'Oficio'}}) }}
                <div class="invalid-feedback">
                    {{ form_errors(form.oficio) }}
                </div>
            </div>
              <div class="mb-3">
    {{ form_label(form.delegacion, 'Delegación', {'label_attr': {'class': 'form-label'}}) }}
    <div class="form-check-group">
        {% for child in form.delegacion %}
            <div class="form-check mb-3"> <!-- Espacio entre cada checkbox -->
                {{ form_widget(child, {'attr': {'class': 'form-check-input me-3'}}) }}
                {{ form_label(child) }}
            </div>
        {% endfor %}
    </div>
    <div class="invalid-feedback">
        {{ form_errors(form.delegacion) }}
    </div>
</div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Registrar</button>
            </div>
            {{ form_end(form) }}

        </div>
    </div>
</div>
{% endblock %}