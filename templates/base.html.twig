<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}My App{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
     
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <!-- Bootstrap 5 JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    
   {% block javascripts %}
    <script>
        function guardarComentario(registroId) {
            const comentario = document.getElementById(`comentario-text-${registroId}`).value;
            const rating = document.querySelector(`input[name="rating-${registroId}"]:checked`)?.value;

            if (!comentario || !rating) {
                alert('Por favor, agrega un comentario y selecciona una calificación.');
                return;
            }

            // Mostrar el comentario y la calificación
            const comentarioGuardadoDiv = document.getElementById(`comentario-guardado-${registroId}`);
            comentarioGuardadoDiv.innerHTML = `
                <p><strong>Comentario:</strong> ${comentario}</p>
                <p><strong>Calificación:</strong> ${'⭐'.repeat(rating)}</p>
            `;

            // Limpiar el área de texto y las estrellas después de guardar
            document.getElementById(`comentario-text-${registroId}`).value = '';
            document.querySelector(`input[name="rating-${registroId}"]:checked`).checked = false;
        }
    </script>
{% endblock %}

</body>
</html>
